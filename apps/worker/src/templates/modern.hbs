<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{promo.title}}</title>
  <style>
    @page {
      size: letter;
      margin: 0;
    }

    html, body {
      width: 8.5in;
      height: 11in;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      box-sizing: border-box;
    }

    *, *::before, *::after {
      box-sizing: border-box;
    }

    .page {
      width: 8.5in;
      height: 11in;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    /* Main layout: sidebar + content */
    .main-layout {
      flex: 1;
      display: flex;
      overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
      width: 2.2in;
      background: {{brand.primaryColor}};
      padding: 24px 16px;
      display: flex;
      flex-direction: column;
      flex-shrink: 0;
    }

    .sidebar-logo {
      width: 100%;
      max-height: 60px;
      object-fit: contain;
      margin-bottom: 16px;
    }

    .sidebar-company {
      color: #ffffff;
      font-size: 18px;
      font-weight: 700;
      margin: 0 0 24px 0;
      line-height: 1.3;
      word-break: break-word;
    }

    .sidebar-promo-title {
      color: #ffffff;
      font-size: 22px;
      font-weight: 700;
      margin: 0;
      line-height: 1.3;
      word-break: break-word;
    }

    /* Content area */
    .content {
      flex: 1;
      padding: 24px;
      background: #ffffff;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .content-subhead {
      color: {{brand.secondaryColor}};
      font-size: 15px;
      font-weight: 700;
      margin: 0 0 20px 0;
      line-height: 1.4;
    }

    /* Product list */
    .product-list {
      flex: 1;
      overflow: hidden;
    }

    .product-row {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid #eeeeee;
    }

    .product-row:last-child {
      border-bottom: none;
    }

    .product-info {
      flex: 1;
      padding-right: 16px;
    }

    .product-name {
      font-size: 13px;
      font-weight: 700;
      color: #1a1a1a;
      margin: 0 0 3px 0;
      line-height: 1.3;
    }

    .product-meta {
      font-size: 10px;
      color: #999999;
      margin: 0;
      line-height: 1.4;
    }

    .product-price {
      font-size: 16px;
      font-weight: 700;
      color: {{brand.secondaryColor}};
      white-space: nowrap;
      flex-shrink: 0;
      margin: 0;
    }

    /* Footer strip */
    .footer {
      background: {{brand.secondaryColor}};
      padding: 12px 24px;
      text-align: center;
      flex-shrink: 0;
    }

    .footer-cta {
      color: #ffffff;
      font-size: 16px;
      font-weight: 700;
      margin: 0;
      letter-spacing: 0.5px;
    }

    /* Watermark */
    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      font-size: 80px;
      color: rgba(0, 0, 0, 0.08);
      font-weight: 900;
      pointer-events: none;
      white-space: nowrap;
      z-index: 999;
    }
  </style>
</head>
<body>
  <div class="page">

    <!-- Main layout -->
    <div class="main-layout">

      <!-- Sidebar -->
      <div class="sidebar">
        {{#if brand.logoUrl}}
          <img class="sidebar-logo" src="{{brand.logoUrl}}" alt="{{brand.name}}">
        {{/if}}
        <p class="sidebar-company">{{brand.name}}</p>
        <p class="sidebar-promo-title">{{promo.title}}</p>
      </div>

      <!-- Content area -->
      <div class="content">
        {{#if promo.subhead}}
          <p class="content-subhead">{{promo.subhead}}</p>
        {{/if}}

        <!-- Product list -->
        <div class="product-list">
          {{#each items}}
            <div class="product-row">
              <div class="product-info">
                <p class="product-name">{{name}}</p>
                {{#if vendor}}
                  <p class="product-meta">{{vendor}}</p>
                {{/if}}
                {{#if sku}}
                  <p class="product-meta">SKU: {{sku}}</p>
                {{/if}}
              </div>
              <p class="product-price" style="color:{{../brand.secondaryColor}}">{{price}}</p>
            </div>
          {{/each}}
        </div>
      </div>

    </div>

    <!-- Footer strip -->
    <div class="footer">
      <p class="footer-cta">
        {{#if promo.cta}}{{promo.cta}}{{else}}Contact us today{{/if}}
      </p>
    </div>

  </div>

  {{#if watermark}}
    <div class="watermark">PREVIEW ONLY</div>
  {{/if}}
</body>
</html>
