<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{promo.title}}</title>
  <style>
    @page { size: letter; margin: 0; }

    html, body {
      width: 8.5in;
      height: 11in;
      margin: 0;
      padding: 0;
      font-family: Arial, Helvetica, sans-serif;
      box-sizing: border-box;
    }

    *, *::before, *::after { box-sizing: border-box; }

    .page {
      width: 8.5in;
      height: 11in;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      background: #fff;
    }

    /* Header */
    .header {
      background: #1a1a1a;
      padding: 16px 28px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-shrink: 0;
    }

    .header-logo { height: 40px; width: auto; object-fit: contain; }
    .header-company { color: #fff; font-size: 20px; font-weight: 700; }

    /* Clearance banner */
    .clearance-banner {
      background: {{brand.secondaryColor}};
      padding: 12px 28px 10px;
      text-align: center;
      flex-shrink: 0;
    }

    .clearance-label {
      font-size: 13px;
      font-weight: 900;
      color: rgba(255,255,255,0.85);
      text-transform: uppercase;
      letter-spacing: 3px;
      margin: 0 0 2px 0;
    }

    .clearance-title {
      font-size: 40px;
      font-weight: 900;
      color: #fff;
      margin: 0;
      line-height: 1.1;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .clearance-sub {
      font-size: 15px;
      color: rgba(255,255,255,0.88);
      margin: 4px 0 0 0;
    }

    /* Product grid */
    .products-section {
      flex: 1;
      padding: 18px 28px;
      background: #f5f5f5;
      overflow: hidden;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }

    .product-card {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 12px;
      position: relative;
    }

    .sale-badge {
      position: absolute;
      top: -6px;
      right: -6px;
      background: {{brand.secondaryColor}};
      color: #fff;
      font-size: 10px;
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 3px 7px;
      border-radius: 4px;
    }

    .product-name {
      font-size: 13px;
      font-weight: 700;
      color: #1a1a1a;
      margin: 0 0 8px 0;
      line-height: 1.3;
      min-height: 34px;
    }

    .product-price {
      font-size: 24px;
      font-weight: 900;
      color: {{brand.secondaryColor}};
      margin: 0 0 3px 0;
    }

    .product-meta {
      font-size: 11px;
      color: #aaa;
      margin: 0;
    }

    /* Footer */
    .footer {
      background: #1a1a1a;
      padding: 13px 28px;
      text-align: center;
      flex-shrink: 0;
    }

    .footer-cta {
      color: #fff;
      font-size: 16px;
      font-weight: 700;
      margin: 0;
      letter-spacing: 0.5px;
    }

    /* Watermark */
    .watermark {
      position: fixed;
      top: 50%; left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      font-size: 80px;
      color: rgba(0,0,0,0.07);
      font-weight: 900;
      pointer-events: none;
      white-space: nowrap;
      z-index: 999;
    }
  </style>
</head>
<body>
  <div class="page">

    <!-- Header -->
    <div class="header">
      <div style="display:flex;align-items:center;gap:12px;">
        {{#if brand.logoUrl}}
          <img class="header-logo" src="{{brand.logoUrl}}" alt="{{brand.name}}">
        {{else}}
          <span class="header-company">{{brand.name}}</span>
        {{/if}}
      </div>
      <span class="header-company" style="font-size:14px;opacity:0.7;">{{brand.name}}</span>
    </div>

    <!-- Clearance banner -->
    <div class="clearance-banner">
      <p class="clearance-label">Clearance Event</p>
      <p class="clearance-title">{{promo.title}}</p>
      {{#if promo.subhead}}
        <p class="clearance-sub">{{promo.subhead}}</p>
      {{/if}}
    </div>

    <!-- Product grid -->
    <div class="products-section">
      <div class="product-grid">
        {{#each items}}
          <div class="product-card">
            <span class="sale-badge">Sale</span>
            <p class="product-name">{{name}}</p>
            <p class="product-price">{{price}}</p>
            {{#if unit}}
              <p class="product-meta">/ {{unit}}</p>
            {{/if}}
            {{#if sku}}
              <p class="product-meta">SKU: {{sku}}</p>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p class="footer-cta">
        {{#if promo.cta}}{{promo.cta}}{{else}}While supplies last â€” act now!{{/if}}
      </p>
    </div>

  </div>

  {{#if watermark}}
    <div class="watermark">PREVIEW ONLY</div>
  {{/if}}
</body>
</html>
