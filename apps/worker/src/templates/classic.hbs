<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{promo.title}}</title>
  <style>
    @page {
      size: letter;
      margin: 0;
    }

    html, body {
      width: 8.5in;
      height: 11in;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      box-sizing: border-box;
    }

    *, *::before, *::after {
      box-sizing: border-box;
    }

    .page {
      width: 8.5in;
      height: 11in;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    /* Header */
    .header {
      background: {{brand.primaryColor}};
      padding: 16px 24px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-shrink: 0;
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .header-logo {
      height: 48px;
      width: auto;
      object-fit: contain;
    }

    .header-company {
      color: #ffffff;
      font-size: 20px;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    .header-right {
      color: #ffffff;
      font-size: 14px;
      font-weight: 600;
      opacity: 0.9;
    }

    /* Title section */
    .title-section {
      padding: 20px 24px;
      background: #ffffff;
      border-bottom: 1px solid #e5e5e5;
      flex-shrink: 0;
    }

    .promo-title {
      font-size: 28px;
      font-weight: 700;
      color: #1a1a1a;
      margin: 0 0 6px 0;
      line-height: 1.2;
    }

    .promo-subhead {
      font-size: 16px;
      color: #666666;
      margin: 0;
      line-height: 1.4;
    }

    /* Product grid */
    .products-section {
      flex: 1;
      padding: 16px 24px;
      background: #f8f8f8;
      overflow: hidden;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 12px;
    }

    .product-card {
      background: #ffffff;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      padding: 12px;
    }

    .product-image {
      width: 100%;
      height: 70px;
      object-fit: contain;
      margin-bottom: 8px;
      display: block;
    }

    .product-name {
      font-size: 13px;
      font-weight: 700;
      color: #1a1a1a;
      margin: 0 0 4px 0;
      line-height: 1.3;
    }

    .product-price {
      font-size: 18px;
      font-weight: 700;
      color: {{brand.secondaryColor}};
      margin: 0 0 4px 0;
    }

    .product-meta {
      font-size: 10px;
      color: #999999;
      margin: 0;
      line-height: 1.4;
    }

    /* Footer */
    .footer {
      background: {{brand.primaryColor}};
      padding: 14px 24px;
      text-align: center;
      flex-shrink: 0;
    }

    .footer-cta {
      color: #ffffff;
      font-size: 16px;
      font-weight: 700;
      margin: 0;
      letter-spacing: 0.5px;
    }

    /* Watermark */
    .watermark {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      font-size: 80px;
      color: rgba(0, 0, 0, 0.08);
      font-weight: 900;
      pointer-events: none;
      white-space: nowrap;
      z-index: 999;
    }
  </style>
</head>
<body>
  <div class="page">

    <!-- Header -->
    <div class="header">
      <div class="header-left">
        {{#if brand.logoUrl}}
          <img class="header-logo" src="{{brand.logoUrl}}" alt="{{brand.name}}">
        {{else}}
          <span class="header-company">{{brand.name}}</span>
        {{/if}}
      </div>
      <div class="header-right">{{brand.name}}</div>
    </div>

    <!-- Title section -->
    <div class="title-section">
      <p class="promo-title">{{promo.title}}</p>
      {{#if promo.subhead}}
        <p class="promo-subhead">{{promo.subhead}}</p>
      {{/if}}
    </div>

    <!-- Product grid -->
    <div class="products-section">
      <div class="product-grid">
        {{#each items}}
          <div class="product-card">
            {{#if imageUrl}}
              <img class="product-image" src="{{imageUrl}}" alt="{{name}}">
            {{/if}}
            <p class="product-name">{{name}}</p>
            <p class="product-price" style="color:{{../brand.secondaryColor}}">{{price}}</p>
            {{#if sku}}
              <p class="product-meta">SKU: {{sku}}</p>
            {{/if}}
            {{#if unit}}
              <p class="product-meta">{{unit}}</p>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <p class="footer-cta">
        {{#if promo.cta}}{{promo.cta}}{{else}}Contact us today{{/if}}
      </p>
    </div>

  </div>

  {{#if watermark}}
    <div class="watermark">PREVIEW ONLY</div>
  {{/if}}
</body>
</html>
